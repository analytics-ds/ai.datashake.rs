---
import { getLang, getAlternatePath, t, localizedUrl } from '@/utils/i18n';

const lang = getLang(Astro.url);
const currentPath = Astro.url.pathname;
const alternatePath = getAlternatePath(currentPath);

const navLinks = [
  { label: t(lang, 'home'), href: localizedUrl('/', lang) },
  { label: t(lang, 'blog'), href: localizedUrl('/blog/', lang) },
];
---

<header class="header">
  <div class="header__inner container">
    <a href={localizedUrl('/', lang)} class="header__logo" aria-label="AI datashake - {t(lang, 'home')}">
      <img src="/logo-datashake-full.svg" alt="AI datashake" class="header__logo-img" />
    </a>

    <button
      class="header__toggle"
      aria-label="Menu"
      aria-expanded="false"
      aria-controls="nav-menu"
    >
      <span class="header__toggle-bar"></span>
      <span class="header__toggle-bar"></span>
      <span class="header__toggle-bar"></span>
    </button>

    <nav id="nav-menu" class="header__nav" aria-label="Navigation">
      <ul class="header__nav-list">
        {navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class:list={['header__nav-link', { active: currentPath === link.href || (link.href !== '/' && link.href !== '/en/' && currentPath.startsWith(link.href)) }]}
            >
              {link.label}
            </a>
          </li>
        ))}
        <li class="header__lang">
          <a
            href={lang === 'fr' ? currentPath : alternatePath}
            class:list={['header__lang-link', { active: lang === 'fr' }]}
          >FR</a>
          <span class="header__lang-sep">|</span>
          <a
            href={lang === 'en' ? currentPath : alternatePath}
            class:list={['header__lang-link', { active: lang === 'en' }]}
          >EN</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<script>
  const toggle = document.querySelector('.header__toggle');
  const nav = document.querySelector('.header__nav');

  toggle?.addEventListener('click', () => {
    const expanded = toggle.getAttribute('aria-expanded') === 'true';
    toggle.setAttribute('aria-expanded', String(!expanded));
    nav?.classList.toggle('is-open');
  });
</script>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-gray-100);
  }

  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 4rem;
  }

  .header__logo {
    text-decoration: none;
    display: flex;
    align-items: center;
  }

  .header__logo-img {
    display: block;
    height: 28px;
    width: auto;
  }

  .header__nav-list {
    display: flex;
    list-style: none;
    gap: var(--spacing-xl);
    align-items: center;
    padding: 0;
    margin: 0;
  }

  .header__nav-link {
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--color-gray-600);
    text-decoration: none;
    padding: var(--spacing-sm) 0;
    position: relative;
    transition: color var(--transition-fast);
  }

  .header__nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--gradient-primary);
    transition: width var(--transition-base);
  }

  .header__nav-link:hover,
  .header__nav-link.active {
    color: var(--color-primary);
  }

  .header__nav-link.active::after,
  .header__nav-link:hover::after {
    width: 100%;
  }

  /* Language selector */
  .header__lang {
    display: flex;
    align-items: center;
    gap: 6px;
    margin-left: var(--spacing-md);
    padding-left: var(--spacing-lg);
    border-left: 1px solid var(--color-gray-200);
  }

  .header__lang-link {
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-decoration: none;
    color: var(--color-gray-400);
    transition: color var(--transition-fast);
  }

  .header__lang-link.active {
    color: var(--color-primary);
  }

  .header__lang-link:hover {
    color: var(--color-primary);
  }

  .header__lang-sep {
    font-size: var(--font-size-xs);
    color: var(--color-gray-300);
  }

  /* Mobile toggle */
  .header__toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    padding: var(--spacing-sm);
    background: none;
    border: none;
    cursor: pointer;
  }

  .header__toggle-bar {
    display: block;
    width: 22px;
    height: 2px;
    background-color: var(--color-gray-700);
    border-radius: 1px;
    transition: all var(--transition-base);
  }

  @media (max-width: 768px) {
    .header__toggle {
      display: flex;
    }

    .header__nav {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: var(--color-white);
      border-bottom: 1px solid var(--color-gray-100);
      box-shadow: var(--shadow-lg);
      padding: var(--spacing-lg);
      transform: translateY(-10px);
      opacity: 0;
      visibility: hidden;
      transition: all var(--transition-base);
    }

    .header__nav.is-open {
      transform: translateY(0);
      opacity: 1;
      visibility: visible;
    }

    .header__nav-list {
      flex-direction: column;
      gap: var(--spacing-md);
    }

    .header__nav-link {
      font-size: var(--font-size-base);
      padding: var(--spacing-sm) 0;
    }

    .header__lang {
      margin-left: 0;
      padding-left: 0;
      border-left: none;
      padding-top: var(--spacing-sm);
      border-top: 1px solid var(--color-gray-200);
    }
  }
</style>
