---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Carousel from '@/components/Carousel.astro';
import ArticleCard from '@/components/ArticleCard.astro';
import { getCollection } from 'astro:content';

const allPosts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const latestPosts = allPosts.slice(0, 6);
const categories = [...new Set(allPosts.map((post) => post.data.category))];
---

<BaseLayout
  title="AI Datashake — Le blog GEO : Generative Engine Optimization"
  description="Découvrez le GEO (Generative Engine Optimization) : comment optimiser votre contenu pour les moteurs de recherche et l'IA générative. Stratégies, guides et analyses."
>
  <!-- Hero -->
  <section class="hero">
    <div class="container">
      <div class="hero__content">
        <p class="hero__label">Generative Engine Optimization</p>
        <h1 class="hero__title">
          Optimisez votre visibilité pour
          <span class="gradient-text">l'IA générative</span>
        </h1>
        <p class="hero__description">
          Le SEO évolue. Les moteurs de recherche intègrent l'IA générative dans leurs réponses.
          Découvrez comment adapter votre stratégie de contenu pour rester visible dans ce nouvel écosystème.
        </p>
        <div class="hero__actions">
          <a href="/blog/" class="btn btn--primary">Explorer le blog</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Carousel des derniers articles -->
  <Carousel title="Derniers articles">
    {latestPosts.map((post, index) => (
      <ArticleCard
        title={post.data.title}
        description={post.data.description}
        date={post.data.date}
        category={post.data.category}
        slug={post.slug}
        image={post.data.image}
        imageAlt={post.data.imageAlt}
      />
    ))}
  </Carousel>

  <!-- Categories -->
  {categories.length > 0 && (
    <section class="section section--gray">
      <div class="container">
        <h2>Catégories</h2>
        <p style="color: var(--color-gray-500); margin-bottom: var(--spacing-xl);">
          Explorez nos articles par thématique.
        </p>
        <div class="categories-grid">
          {categories.map((category) => {
            const categorySlug = category.toLowerCase().replace(/\s+/g, '-').normalize('NFD').replace(/[\u0300-\u036f]/g, '');
            const count = allPosts.filter((p) => p.data.category === category).length;
            return (
              <a href={`/categorie/${categorySlug}/`} class="category-card">
                <h3 class="category-card__title">{category}</h3>
                <p class="category-card__count">
                  {count} article{count > 1 ? 's' : ''}
                </p>
              </a>
            );
          })}
        </div>
      </div>
    </section>
  )}
</BaseLayout>

<style>
  /* Hero */
  .hero {
    padding: var(--spacing-4xl) 0;
    text-align: center;
  }

  .hero__content {
    max-width: 750px;
    margin: 0 auto;
  }

  .hero__label {
    display: inline-block;
    font-size: var(--font-size-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-cyan);
    margin-bottom: var(--spacing-md);
  }

  .hero__title {
    font-size: var(--font-size-5xl);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: var(--spacing-lg);
  }

  .hero__description {
    font-size: var(--font-size-lg);
    color: var(--color-gray-500);
    line-height: 1.7;
    margin-bottom: var(--spacing-2xl);
  }

  .hero__actions {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
  }

  /* Categories grid */
  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: var(--spacing-lg);
  }

  .category-card {
    display: block;
    padding: var(--spacing-xl);
    background: var(--color-white);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--border-radius-lg);
    text-decoration: none;
    transition: all var(--transition-base);
  }

  .category-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .category-card__title {
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: var(--color-gray-900);
    margin-bottom: var(--spacing-xs);
  }

  .category-card:hover .category-card__title {
    color: var(--color-primary);
  }

  .category-card__count {
    font-size: var(--font-size-sm);
    color: var(--color-gray-400);
    margin: 0;
  }

  @media (max-width: 768px) {
    .hero__title {
      font-size: var(--font-size-3xl);
    }

    .hero {
      padding: var(--spacing-2xl) 0;
    }
  }
</style>
