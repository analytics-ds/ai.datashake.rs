---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Carousel from '@/components/Carousel.astro';
import ArticleCard from '@/components/ArticleCard.astro';
import { localizedUrl, t } from '@/utils/i18n';
import { getCollection } from 'astro:content';

const lang = 'en';
const allPosts = (await getCollection('blog-en', ({ data }) => !data.draft))
  .sort((a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf());

const latestPosts = allPosts.slice(0, 6);
const categories = [...new Set(allPosts.map((post) => post.data.category))];
---

<BaseLayout
  title={t(lang, 'homeTitle')}
  description={t(lang, 'homeDescription')}
>
  <!-- Hero -->
  <section class="hero">
    <div class="container">
      <div class="hero__content">
        <p class="hero__label">{t(lang, 'heroLabel')}</p>
        <h1 class="hero__title">
          {t(lang, 'heroTitle1')}
          <span class="gradient-text">{t(lang, 'heroTitle2')}</span>
        </h1>
        <p class="hero__description">
          {t(lang, 'heroDescription')}
        </p>
        <div class="hero__actions">
          <a href={localizedUrl('/blog/', lang)} class="btn btn--primary">{t(lang, 'exploreBlog')}</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest articles carousel -->
  <Carousel title={t(lang, 'latestArticles')}>
    {latestPosts.map((post) => (
      <ArticleCard
        title={post.data.title}
        description={post.data.description}
        date={post.data.date}
        category={post.data.category}
        slug={post.slug}
      />
    ))}
  </Carousel>

  <!-- Categories -->
  {categories.length > 0 && (
    <section class="section section--gray">
      <div class="container">
        <h2>{t(lang, 'categories')}</h2>
        <p style="color: var(--color-gray-500); margin-bottom: var(--spacing-xl);">
          {t(lang, 'exploreByTopic')}
        </p>
        <div class="categories-grid">
          {categories.map((category) => {
            const categorySlug = category.toLowerCase().replace(/\s+/g, '-').normalize('NFD').replace(/[\u0300-\u036f]/g, '');
            const count = allPosts.filter((p) => p.data.category === category).length;
            return (
              <a href={localizedUrl(`/category/${categorySlug}/`, lang)} class="category-card">
                <h3 class="category-card__title">{category}</h3>
                <p class="category-card__count">
                  {count} {count > 1 ? t(lang, 'articles') : t(lang, 'article')}
                </p>
              </a>
            );
          })}
        </div>
      </div>
    </section>
  )}
</BaseLayout>

<style>
  /* Hero */
  .hero {
    padding: var(--spacing-4xl) 0;
    text-align: center;
  }

  .hero__content {
    max-width: 750px;
    margin: 0 auto;
  }

  .hero__label {
    display: inline-block;
    font-size: var(--font-size-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-cyan);
    margin-bottom: var(--spacing-md);
  }

  .hero__title {
    font-size: var(--font-size-5xl);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: var(--spacing-lg);
  }

  .hero__description {
    font-size: var(--font-size-lg);
    color: var(--color-gray-500);
    line-height: 1.7;
    margin-bottom: var(--spacing-2xl);
  }

  .hero__actions {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
  }

  /* Categories grid */
  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: var(--spacing-lg);
  }

  .category-card {
    display: block;
    padding: var(--spacing-xl);
    background: var(--color-white);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--border-radius-lg);
    text-decoration: none;
    transition: all var(--transition-base);
  }

  .category-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .category-card__title {
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: var(--color-gray-900);
    margin-bottom: var(--spacing-xs);
  }

  .category-card:hover .category-card__title {
    color: var(--color-primary);
  }

  .category-card__count {
    font-size: var(--font-size-sm);
    color: var(--color-gray-400);
    margin: 0;
  }

  @media (max-width: 768px) {
    .hero__title {
      font-size: var(--font-size-3xl);
    }

    .hero {
      padding: var(--spacing-2xl) 0;
    }
  }
</style>
